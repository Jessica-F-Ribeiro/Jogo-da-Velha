<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentJogo">

    <LinearLayout
        android:id="@+id/linear_jog1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_jog1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="10dp"
            android:text="@string/jogador1"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/indigo"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/indigo"
            android:id="@+id/tv_placar_jog1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_jog2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_jog1">

        <TextView
            android:id="@+id/tv_jog2"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="10dp"
            android:text="@string/jogador2"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/indigo"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/indigo"
            android:id="@+id/tv_placar_jog2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"/>

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_jog2">

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:weightSum="3">

            <Button
                android:textSize="50sp"
                android:textColor="@color/purple_500"
                android:id="@+id/bt00"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"/>

            <Button
                android:textSize="50sp"
                android:textColor="@color/purple_500"
                android:id="@+id/bt01"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"/>

            <Button
                android:textSize="50sp"
                android:textColor="@color/purple_500"
                android:id="@+id/bt02"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:weightSum="3">

            <Button
                android:textSize="50sp"
                android:textColor="@color/purple_500"
                android:id="@+id/bt10"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"/>

            <Button
                android:textSize="50sp"
                android:textColor="@color/purple_500"
                android:id="@+id/bt11"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"/>

            <Button
                android:textSize="50sp"
                android:textColor="@color/purple_500"
                android:id="@+id/bt12"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:weightSum="3">

            <Button
                android:textSize="50sp"
                android:textColor="@color/purple_500"
                android:id="@+id/bt20"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"/>

            <Button
                android:textSize="50sp"
                android:textColor="@color/purple_500"
                android:id="@+id/bt21"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"/>

            <Button
                android:textSize="50sp"
                android:textColor="@color/purple_500"
                android:id="@+id/bt22"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>